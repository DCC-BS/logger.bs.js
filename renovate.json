{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":automergeAll",
    ":prImmediately"
  ],
  "internalChecksFilter": "strict",
  "minimumReleaseAge": "14 days",
  "managers": {
    "bun": {}
  },
  "packageRules": [
    {
      "description": "Automerge minor, patch, and high-confidence updates",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  }
}
